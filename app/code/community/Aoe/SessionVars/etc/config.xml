<?xml version="1.0"?>
<config>
    <modules>
        <Aoe_SessionVars>
            <version>0.3.1</version>
        </Aoe_SessionVars>
    </modules>
    <global>
        <helpers>
            <aoe_sessionvars>
                <class>Aoe_SessionVars_Helper</class>
            </aoe_sessionvars>
        </helpers>
        <models>
            <aoe_sessionvars>
                <class>Aoe_SessionVars_Model</class>
            </aoe_sessionvars>
        </models>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <capture_sessionvars>
                        <class>aoe_sessionvars/observer</class>
                        <method>setSessionVars</method>
                        <type>singleton</type>
                    </capture_sessionvars>
                </observers>
            </controller_action_predispatch>
        </events>
        <aoe_sessionvars>
            <vars>
                <!-- Check Readme.md for documentation and examples -->
            </vars>
        </aoe_sessionvars>
    </frontend>

    <global>
        <filter>
            <directives>
                <sessionvar>aoe_sessionvars/directive_sessionvar</sessionvar>
            </directives>
        </filter>
    </global>
</config>
